<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LayoutHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty"
        android:background="@color/white"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgheaderBack"
            android:layout_width="@dimen/twenty_three"
            android:layout_height="@dimen/twenty_three"
            android:layout_marginStart="@dimen/fifteen"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblMenuHeaderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fifteen"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/poppins_medium"
            android:text="Placement Events"
            android:textColor="@color/black"
            android:textSize="@dimen/eighteen_sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/imgheaderBack"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/toolbarLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LayoutHeader"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginEnd="@dimen/ten"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/lnrTabOneName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginEnd="@dimen/five"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tabOneName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:text="Upcoming"
                android:textColor="@color/dark_blue">
            </TextView>

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/two"
                android:layout_below="@+id/groupheading"
                android:layout_marginTop="@dimen/five"
                android:background="@color/dark_blue">
            </View>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lnrTabTwoName"
            android:layout_marginStart="@dimen/five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tabTwoName"
                android:fontFamily="@font/poppins_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Historical">
            </TextView>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/two"
                android:layout_below="@+id/groupheading"
                android:layout_marginTop="@dimen/five"
                android:background="@color/light_gray_3"
                >
            </View>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout

        android:layout_below="@+id/toolbarLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcyPlacementEvent"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/ten"
            android:layout_height="wrap_content"
            >
        </androidx.recyclerview.widget.RecyclerView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcyHistoricalEvent"
            android:layout_below="@+id/rcyPlacementEvent"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_marginTop="@dimen/ten"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:id="@+id/ErrorMessage"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:text="No Data Found"
            android:visibility="gone"
            android:gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:layout_height="wrap_content">

        </TextView>
    </RelativeLayout>

</RelativeLayout>