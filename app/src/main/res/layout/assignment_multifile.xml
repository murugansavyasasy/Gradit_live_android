<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_shadow_white"

    android:layout_marginStart="@dimen/fifteen"
    android:layout_marginTop="@dimen/two"
    android:layout_marginEnd="@dimen/fifteen">

    <LinearLayout
        android:id="@+id/lnrNoticeboardd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/two"
        android:layout_marginRight="@dimen/two"
        android:orientation="horizontal"
        android:padding="@dimen/ten"
       >

        <ImageView
            android:id="@+id/viewFile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/fileimage"></ImageView>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/ibisubmissiontime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginTop="@dimen/five"
                android:textSize="@dimen/ten"
                android:text="Sumittiontime"
                android:textColor="@color/btn_clr_blue">

            </TextView>

            <TextView
                android:id="@+id/filename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ibisubmissiontime"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginTop="@dimen/five"
                android:text="imagename"
                android:textStyle="bold"
                android:textSize="@dimen/ten">

            </TextView>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrDesc"
        android:visibility="gone"
        android:layout_below="@+id/lnrNoticeboardd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/lblDesc"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</RelativeLayout>