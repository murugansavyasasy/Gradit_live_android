<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginEnd="@dimen/ten"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Document Icon -->
        <ImageView
            android:layout_width="@dimen/twenty"
            android:layout_height="@dimen/twenty"
            android:src="@drawable/document_icon"
            android:layout_marginEnd="@dimen/five" />

        <!-- File Name (Expanding TextView) -->
        <TextView
            android:id="@+id/lblFileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_regular"
            android:text="Sample PDF"
            android:textSize="@dimen/twelve"
            android:ellipsize="end"
             />

        <!-- Default Text (Optional) -->
        <TextView
            android:id="@+id/lbldefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_green_tick_icon"
            android:drawablePadding="@dimen/five"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/default_"
            android:textSize="@dimen/twelve"
            android:visibility="gone"
            android:paddingEnd="@dimen/fifteen"
            android:layout_marginStart="@dimen/five" />

        <!-- Blue Arrow at End -->
        <ImageView
            android:id="@+id/my_blue_arrow"
            android:layout_width="@dimen/twenty"
            android:layout_height="@dimen/twenty"
            android:layout_marginStart="@dimen/five"
            android:src="@drawable/blue_right_arrow" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/ten"
        android:alpha="0.2"
        android:background="@color/light_gray" />
</LinearLayout>


