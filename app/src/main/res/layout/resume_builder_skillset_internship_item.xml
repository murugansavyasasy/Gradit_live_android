<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/lblCompanyName"
        android:layout_width="match_parent"
        style="@style/CustomTextStylePoppinsBold"
        android:text="ABC Private Limited Company"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/lblDuration"
        android:layout_width="match_parent"
        style="@style/CustomTextStylePoppinsMedium"
        android:text="25 Jan 2025 to 24 Feb 2025"
        android:layout_height="wrap_content">
    </TextView>

</LinearLayout>