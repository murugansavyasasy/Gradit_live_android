<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shadow_white">


    <RelativeLayout
        android:id="@+id/examlist_constrine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fifteen"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/relativeExam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_financeandaccounding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginTop="@dimen/eight"
                android:layout_toLeftOf="@+id/img_calender"
                android:text="NameoftheExam"
                android:textColor="@color/black">

            </TextView>


            <TextView
                android:id="@+id/txt_fn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/eight"
                android:layout_marginRight="@dimen/twenty"
                android:text="FN"
                android:textColor="@color/black"

                ></TextView>

            <View
                android:id="@+id/view3"
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_marginTop="@dimen/five"
                android:layout_marginRight="@dimen/five"
                android:layout_toLeftOf="@+id/txt_fn"
                android:background="@color/black"

                ></View>

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eight"
                android:layout_marginRight="@dimen/five"
                android:layout_toLeftOf="@+id/view3"
                android:text="08/05/3099 "
                android:textColor="@color/black"

                ></TextView>

            <ImageView
                android:id="@+id/img_calender"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/eight"
                android:layout_marginRight="@dimen/five"
                android:layout_toLeftOf="@+id/txt_date"
                android:src="@drawable/ic_calendar"></ImageView>

        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="170dp"
            android:layout_height="1dp"
            android:layout_below="@+id/relativeExam"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/five"
            android:background="@color/whitegrey"
            app:layout_constraintLeft_toLeftOf="parent">

        </View>


        <View
            android:id="@+id/blue_view"
            android:layout_width="3dp"
            android:layout_height="30dp"
            android:layout_below="@+id/relativeExam"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:background="@color/btn_clr_blue"
            app:layout_constraintLeft_toLeftOf="parent">

        </View>


        <TextView
            android:id="@+id/txt_testing_creating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeExam"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/thirteen"
            android:layout_toRightOf="@+id/blue_view"
            android:text="@string/txt_testing_exam_creating"
            android:textColor="@color/black"
            android:textSize="@dimen/fifteen"

            >

        </TextView>


        <TextView
            android:id="@+id/txt_bcom_Accounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_testing_creating"
            android:layout_marginLeft="@dimen/thirty"
            android:layout_marginTop="@dimen/twelve"
            android:background="@drawable/sublistlist_lightblue_colour"
            android:padding="@dimen/eight"
            android:text="Test sub"
            android:textColor="@color/clr_previous_submsion"

            ></TextView>


    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consrin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/examlist_constrine">

        <View
            android:id="@+id/view4"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/five"
            android:background="@color/whitegrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"></View>

        <TextView
            android:id="@+id/txt_Syllabus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/eight"
            android:text="Syllabus Details:"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view4"></TextView>

        <TextView
            android:id="@+id/txt_Syllabus1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/eight"
            android:text="Syllabus 1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_Syllabus"></TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>