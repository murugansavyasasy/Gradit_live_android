        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lblNew"
            android:layout_width="@dimen/twelve"
            android:layout_height="@dimen/twelve"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
