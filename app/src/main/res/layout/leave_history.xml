<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/fifteen"
    android:layout_marginTop="@dimen/ten"
    android:layout_marginEnd="@dimen/fifteen">

    <LinearLayout
        android:id="@+id/lnrNoticeboardd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/two"
        android:background="@drawable/bg_shadow_white"
        android:orientation="vertical"
        android:padding="@dimen/five"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/rytLeaveHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/three">

            <LinearLayout
                android:id="@+id/lnrCreatedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/five"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgCalender"
                    android:layout_width="@dimen/twenty_three"
                    android:layout_height="@dimen/twenty_three"
                    android:layout_gravity="left"
                    android:layout_marginRight="@dimen/five"
                    android:src="@drawable/ic_calendar" />

                <TextView
                    android:id="@+id/lblLeaveCreatedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/two"
                    android:layout_marginEnd="@dimen/twenty"
                    android:layout_toLeftOf="@+id/lblNoticeboardDate"
                    android:layout_toRightOf="@id/Viewlineone"
                    android:padding="@dimen/two"
                    android:text="24th May 2021"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/lblleaveStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="@dimen/three"
                    android:text="Waiting for approval"
                    android:textColor="@color/clr_dark_blue"
                    android:textSize="@dimen/twelve" />
            </LinearLayout>

            <View
                android:id="@+id/ViewlineTwo"
                android:layout_width="@dimen/one_ten"
                android:layout_height="@dimen/one"
                android:layout_below="@+id/lnrCreatedDate"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/ten"
                android:layout_marginTop="@dimen/five"
                android:background="@color/grey_screen_clr"></View>

            <View
                android:id="@+id/Viewlineone"
                android:layout_width="@dimen/two"
                android:layout_height="@dimen/fifteen"
                android:layout_below="@+id/ViewlineTwo"
                android:layout_marginStart="@dimen/ten"
                android:layout_marginTop="@dimen/ten"
                android:background="@color/clr_dark_blue"></View>

            <TextView
                android:id="@+id/lblLeaveType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ViewlineTwo"
                android:layout_marginStart="@dimen/five"
                android:layout_marginTop="@dimen/seven"
                android:layout_marginEnd="@dimen/twenty"
                android:layout_toRightOf="@id/Viewlineone"
                android:padding="@dimen/two"
                android:text="Emeregency"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen"
                android:textStyle="bold" />

            <View
                android:id="@+id/Viewlineone1"
                android:layout_width="@dimen/two"
                android:layout_height="@dimen/fifteen"
                android:layout_below="@+id/Viewlineone"
                android:layout_marginStart="@dimen/ten"
                android:layout_marginTop="@dimen/thirteen"
                android:background="@color/clr_dark_blue"></View>

            <TextView
                android:id="@+id/lblname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblLeaveType"
                android:layout_marginStart="@dimen/five"
                android:layout_marginTop="@dimen/seven"
                android:layout_marginEnd="@dimen/twenty"
                android:layout_toRightOf="@id/Viewlineone1"
                android:padding="@dimen/two"
                android:text="Emeregency"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/lnrNo_of_Days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ViewlineTwo"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/ten"
                android:layout_marginTop="@dimen/seven"
                android:orientation="horizontal"
                android:padding="@dimen/three"
                android:visibility="visible">


                <TextView
                    android:id="@+id/lblnoDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/five"
                    android:layout_marginEnd="@dimen/two"
                    android:text="No.of days :"
                    android:textColor="@color/clr_light_black"
                    android:textSize="@dimen/twelve"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblLeaveNoOfDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/five"
                    android:layout_marginEnd="@dimen/two"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="@color/clr_light_black"
                    android:textSize="@dimen/twelve"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lbl_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblname"
                android:layout_marginStart="@dimen/three"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="@dimen/three"
                android:visibility="visible">

                <TextView
                    android:id="@+id/department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/five"
                    android:layout_marginEnd="@dimen/two"
                    android:text="B.E.CSE"
                    android:textColor="@color/clr_light_black"
                    android:textSize="@dimen/twelve"
                    android:textStyle="normal" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/black">

                </View>

                <TextView
                    android:id="@+id/year"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:backgroundTint="@color/clr_bg_sentby"
                    android:padding="@dimen/five"
                    android:text="YEAR 1"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/black">

                </View>

                <TextView
                    android:id="@+id/section"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:backgroundTint="@color/clr_bg_sentby"
                    android:padding="@dimen/five"
                    android:text="27 May 2010"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnrFromToDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_section"
                android:layout_marginStart="@dimen/three"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="@dimen/three"
                android:visibility="visible">

                <TextView
                    android:id="@+id/lblFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/five"
                    android:layout_marginEnd="@dimen/two"
                    android:text="@string/txt_from"
                    android:textColor="@color/clr_light_black"
                    android:textSize="@dimen/twelve"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/lblFromDate"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:background="@drawable/bg_rectangle_white"
                    android:backgroundTint="@color/clr_bg_sentby"
                    android:padding="@dimen/five"
                    android:text="27 May 2010"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve" />

                <TextView
                    android:id="@+id/lblTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/eight"
                    android:layout_marginEnd="@dimen/two"
                    android:text="@string/txt_to"
                    android:textColor="@color/clr_light_black"
                    android:textSize="@dimen/twelve"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/lblToDate"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:background="@drawable/bg_rectangle_white"
                    android:backgroundTint="@color/clr_bg_sentby"
                    android:padding="@dimen/five"
                    android:text="27 May 2010"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rytLeaveDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/three"
            android:layout_marginBottom="@dimen/ten"
            android:orientation="vertical"
            android:visibility="gone">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/black"></View>


            <TextView
                android:id="@+id/lblLeaveReason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten"
                android:layout_marginTop="@dimen/ten"
                android:text=""
                android:textColor="@color/clr_black"
                android:textSize="@dimen/twelve"
                android:textStyle="normal" />

            <LinearLayout
                android:id="@+id/btn_rejectLiner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblLeaveReason"
                android:layout_alignParentRight="true">


                <TextView
                    android:id="@+id/lblRejaect"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:background="@drawable/bg_logout_blue"
                    android:padding="@dimen/five"
                    android:text="Reject"
                    android:textAlignment="center"
                    android:textColor="@color/clr_sky_blue"
                    android:textSize="@dimen/twelve" />

                <TextView
                    android:id="@+id/lblApproval"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:background="@drawable/bg_rectangle_white"
                    android:backgroundTint="@color/clr_bgred"
                    android:padding="@dimen/five"
                    android:text="Approval"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/twelve" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>