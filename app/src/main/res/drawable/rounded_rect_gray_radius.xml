<!-- res/drawable/rounded_rect_with_stroke.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="#FFFFFF" /> <!-- or transparent -->

    <stroke
        android:width="2dp"
        android:color="@color/light_gray2" /> <!-- gray stroke -->

    <corners android:radius="16dp" /> <!-- curve all corners equally -->
</shape>
