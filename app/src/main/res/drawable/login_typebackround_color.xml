<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="0.5dp"
                android:right="0.5dp"
                android:top="0.5dp" />
            <solid android:color="#10CCCCCC" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
            <solid android:color="#40CCCCCC" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape android:layout_height="wrap_content">
            <padding
                android:bottom="1dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
            <solid android:color="#50CCCCCC" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>

            <padding
                android:bottom="0.5dp"
                android:left="0.1dp"
                android:right="0.1dp"
                android:top="0dp" />
            <solid android:color="#60CCCCCC" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="#000" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>